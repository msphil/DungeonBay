<h1>Create a Character</h1>

<%= form_for(@character) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label "Image URL" %><br />
    <%= f.text_field :img_url %>
  </div>
  <div class="actions">
    <%= f.submit "Create!" %>
  </div>
<% end %>
